<% if flash.present? %>
    <% flash.each do |type, message| %>
        <div class="alert <%= bootstrap_class_for(type) %> fade in flash-notice">
          <button class="close" data-dismiss="alert"><i class="glyphicon glyphicon-remove-circle"></i></button>
          <%= message %>
        </div>
    <% end %>
<% end %>