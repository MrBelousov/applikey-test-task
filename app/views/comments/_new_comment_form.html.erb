<%= form_for(post.comments.new) do |f| %>
  <%= render 'layouts/shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :text, placeholder: 'Your comment to post...', required: true %>
  </div>
  <%= hidden_field_tag :post_id, post.id %>
  <%= f.submit 'Comment', class: 'btn btn-large btn-primary', controller: 'comments_to_post' %>
<% end %>
